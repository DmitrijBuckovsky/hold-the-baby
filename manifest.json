{
  "manifest_version": 3,
  "name": "Speech to Text",
  "version": "1.0",
  "description": "Convert speech to text with easy controls",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Speech to Text"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
